{
  "name": "@docsynth/lint",
  "version": "0.1.0",
  "type": "module",
  "description": "AI-powered documentation linter for DocSynth",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@docsynth/types": "*"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "vitest": "^4.0.18"
  }
}
