{
  "$schema": "https://docsynth.dev/schema/config.json",
  "version": 1,
  "_comment": "DocSynth config for Node.js + TypeScript projects",
  "triggers": {
    "onPRMerge": true,
    "branches": ["main"]
  },
  "filters": {
    "includePaths": ["src/**/*.ts", "src/**/*.tsx", "lib/**/*.ts"],
    "excludePaths": [
      "**/*.test.ts",
      "**/*.spec.ts",
      "**/__tests__/**",
      "**/__mocks__/**",
      "**/node_modules/**",
      "**/dist/**",
      "**/coverage/**"
    ]
  },
  "docTypes": {
    "readme": true,
    "apiDocs": true,
    "changelog": true,
    "guides": false,
    "diagrams": false
  },
  "style": {
    "tone": "technical",
    "includeExamples": true,
    "includeApiReference": true
  }
}
